{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es2019",
      "dom"
    ],
    "module": "commonjs",
    "rootDir": "src",
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}